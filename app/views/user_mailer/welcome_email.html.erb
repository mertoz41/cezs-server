  <div style="margin: 20px 20px 20px 20px;">
    <div style="display:flex; justify-content: center">
      <%= image_tag('email-logo.png', :style => "width: 35%") %>
    </div>
    <h1 style="font-family:arial;">Hello <%= @user.username %>,</h1>
